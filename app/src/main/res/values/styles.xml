<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Dark" parent="AppTheme">
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#ffffff</item>
        <item name="colorDialogAccent">#ffffff</item>
        <item name="colorText">#E6FFFFFF</item>
        <item name="colorTextSecondary">#B3FFFFFF</item>
        <item name="colorBack">#616161</item>
        <item name="colorDialog">#757575</item>
        <item name="colorPressed">#757575</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDark</item>
    </style>

    <style name="Light" parent="AppTheme">
        <item name="colorPrimary">#BDBDBD</item>
        <item name="colorPrimaryDark">#9E9E9E</item>
        <item name="colorAccent">#000000</item>
        <item name="colorDialogAccent">#000000</item>
        <item name="colorText">#CC000000</item>
        <item name="colorTextSecondary">#A6000000</item>
        <item name="colorBack">#F5F5F5</item>
        <item name="colorDialog">#FAFAFA</item>
        <item name="colorPressed">#E0E0E0</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleLight</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:padding">@dimen/list_item_padding</item>
    </style>

    <style name="MyActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?colorPrimary</item>
    </style>

    <style name="PreferenceThemeOverlay.v14">
        <item name="android:textColor">?colorText</item>
        <item name="android:textColorSecondary">?colorTextSecondary</item>
        <item name="android:padding">@dimen/preference_padding</item>
    </style>

    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">?colorDialogAccent</item>
        <item name="android:textColorPrimary">?colorText</item>
        <item name="android:background">?colorDialog</item>
    </style>

    <style name="AppCompatAlertDialogStyleLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?colorDialogAccent</item>
        <item name="android:textColorPrimary">?colorText</item>
        <item name="android:background">?colorDialog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
